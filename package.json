{
  "name": "blob",
  "version": "0.0.1",
  "description": "Beautiful Lattice Overhead Brojector",
  "main": "index.js",
  "scripts": {
    "start": "npm run app",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel build:watch app:local:watch",
    "test": "npm-run-all lint:*",
    "app": "node server/index.js",
    "app:watch": "nodemon server/index.js --watch public -e js,json,css,html",
    "app:local": "npm run app -- --local",
    "app:local:watch": "npm run app:watch -- --local",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "lint:frontend": "eslint \"src/**/*.{js,jsx}\"",
    "lint:style": "stylelint \"src/**/*.scss\"",
    "lint-staged": "lint-staged",
    "add-public": "git add public -A"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xenharmonic-devs/blob.git"
  },
  "author": "",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/xenharmonic-devs/blob/issues"
  },
  "homepage": "https://github.com/xenharmonic-devs/blob#readme",
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "autodux": "^5.0.1",
    "autoprefixer": "^9.5.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "classnames": "^2.2.6",
    "core-js": "^3.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-prettier-standard": "^2.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-standard": "^4.0.0",
    "eventemitter3": "^3.1.2",
